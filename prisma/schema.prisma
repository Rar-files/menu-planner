generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Meal {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  slug String @unique

  name        String
  type        MealType
  description String
  date        DateTime

  ingredients Ingredient[]
}

model Product {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  slug String @unique

  name         String
  unit         Unit
  pricePerUnit Float

  ingredients Ingredient[]
}

model Ingredient {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId

  meal   Meal   @relation(fields: [mealId], references: [id])
  mealId String @db.ObjectId

  quantity Int
}

enum MealType {
  breakfast
  lunch
  dinner
  snack
}

enum Unit {
  kg
  apiece
  ml
}
